{
    "schema": "https://schema.management.azure.com/schemas/2019-04-01/createUIDefinition.json#",
    "handler": "Microsoft.Compute.MultiVm",
    "version": "1.0.0",
    "parameters": {
      "basics": [
        {
          "name": "projectDetails",
          "type": "Microsoft.Common.Section",
          "label": "Project Details",
          "elements": [
            {
              "name": "location",
              "type": "Microsoft.Common.Location",
              "label": "Location",
              "defaultValue": "[resourceGroup().location]"
            }
          ]
        }
      ],
      "steps": [
        {
          "name": "configuration",
          "label": "Configuration",
          "elements": [
            {
              "name": "vmSettings",
              "type": "Microsoft.Common.Section",
              "label": "Virtual Machine Settings",
              "elements": [
                {
                  "name": "vmSize",
                  "type": "Microsoft.Compute.SizeSelector",
                  "label": "Virtual Machine Size",
                  "defaultValue": "Standard_DS1_v2",
                  "constraints": {
                    "allowedSizes": [
                      "Standard_DS1_v2",
                      "Standard_DS2_v2",
                      "Standard_DS3_v2"
                    ]
                  }
                },
                {
                  "name": "adminUsername",
                  "type": "Microsoft.Common.TextBox",
                  "label": "Admin Username",
                  "defaultValue": "adminUser",
                  "constraints": {
                    "required": true,
                    "regex": "^[a-zA-Z][a-zA-Z0-9-]{2,15}$",
                    "validationMessage": "Admin username must be between 3 and 16 characters long and can only contain letters, numbers, and hyphens."
                  }
                },
                {
                  "name": "adminPassword",
                  "type": "Microsoft.Common.PasswordBox",
                  "label": "Admin Password",
                  "constraints": {
                    "required": true,
                    "minLength": 12,
                    "maxLength": 72,
                    "validationMessage": "Password must be between 12 and 72 characters long."
                  }
                }
              ]
            }
          ]
        }
      ],
      "outputs": {
        "location": "[location]",
        "vmSize": "[vmSettings.vmSize]",
        "adminUsername": "[vmSettings.adminUsername]",
        "adminPassword": "[vmSettings.adminPassword]"
      }
    }
  }