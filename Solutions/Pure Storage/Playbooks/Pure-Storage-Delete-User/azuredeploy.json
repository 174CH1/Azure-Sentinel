                "type": "Http",
                "inputs": {
                    "uri": "https://@{items('IP_Loop')?['Address']}/api/@{last(body('Fetching_API_version')?['version'])}/logout",
                    "method": "POST",
                    "headers": {
                        "x-auth-token": "@{outputs('Retrieving_auth_token')?['headers']['x-auth-token']}"
                    }
                },
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                }
            }
        },
